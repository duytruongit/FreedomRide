        <PreferenceScreen android:title="更换皮肤">
        </PreferenceScreen>
    </PreferenceCategory>
    
    <PreferenceCategory android:title="辅助功能">
        <PreferenceScreen android:title="查看流量统计" android:summary="使用所产生的上行和下行流量">
        </PreferenceScreen>
    </PreferenceCategory>
    
    <PreferenceCategory android:title="帮助">
        <PreferenceScreen android:title="反馈建议" android:summary="反馈建议">
        </PreferenceScreen>
    </PreferenceCategory>
